---
import Base from './Base.astro';

export interface Props {
    title?: string;
}

const { title } = Astro.props as Props;

const description = 'Better than Nicholas. Together.';
const icon = '/icon.webp';
const site = 'BTN';
const titleMeta = title ? `${title} - ${site}` : site;
---

<Base
    description={description}
    icon={icon}
    titleMeta={titleMeta}
>
    <main class="flex w-full h-screen justify-center items-center">
        <slot />
    </main>
</Base>
